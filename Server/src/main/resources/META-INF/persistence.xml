<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <!--some indetifier-->
    <persistence-unit name="myunit" transaction-type="RESOURCE_LOCAL">
        <description>
            Persistence unit for the JPA tutorial of the Hibernate Getting Started Guide
        </description>

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!--<class>ua.artcode.library.model.Author</class>
        <class>ua.artcode.library.model.Book</class>
        <class>ua.artcode.library.model.Address</class>-->

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <!--data base must be created before init persistence.xml -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/TaxiProject" />
            <property name="javax.persistence.jdbc.user" value="Andrii" />
            <property name="javax.persistence.jdbc.password" value="111" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update" /> <!-- init DDL operations -->
            <!--update, create, create-drop> -->

        </properties>

    </persistence-unit>


</persistence>